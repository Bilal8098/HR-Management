<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hrmanagementmanager.ComplaintCardController"
            onMouseClicked="#showDetails"
            prefHeight="100.0" prefWidth="250.0"
            styleClass="complaint-card">
    <children>
        <Label fx:id="titleLabel" layoutX="10" layoutY="10" styleClass="card-title"/>
        <Label fx:id="shortDescriptionLabel" layoutX="10" layoutY="40" wrapText="true" styleClass="card-description"/>
    </children>
</AnchorPane>
