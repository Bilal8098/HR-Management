<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hrmanagementmanager.ComplaintsController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <children>
        <VBox prefHeight="400" prefWidth="600">
            <HBox fx:id="titleBar" spacing="10" styleClass="title-bar">
                <Label style="-fx-text-fill: gold;" text="Employee Complaints Dashboard" textFill="#b98585" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="minimizeButton" onAction="#minimizeWindow" styleClass="window-button minimize" text="-" />
                <Button fx:id="closeButton" onAction="#closeWindow" styleClass="window-button close" text="X" />
            </HBox>

            <ScrollPane fx:id="scrollPane" fitToWidth="true" styleClass="scroll-pane">
                <FlowPane fx:id="cardsContainer" hgap="10" prefWrapLength="580" styleClass="cards-container" vgap="10" />
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
