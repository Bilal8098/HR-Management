<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hrmanagementmanager.ComplaintsController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <children>
        <VBox prefHeight="400" prefWidth="600">
            <HBox fx:id="titleBar" prefHeight="56.0" prefWidth="600.0" spacing="10" styleClass="title-bar">
                <Label style="-fx-text-fill: gold; -fx-font-size: 20;" text="Employees Complaints" textFill="#b98585" />
            </HBox>

            <ScrollPane fx:id="scrollPane" fitToWidth="true" styleClass="scroll-pane">
                <FlowPane fx:id="cardsContainer" hgap="10" prefHeight="71.0" prefWidth="579.0" prefWrapLength="580" styleClass="cards-container" vgap="10" />
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>
